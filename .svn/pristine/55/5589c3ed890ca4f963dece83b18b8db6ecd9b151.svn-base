<Page x:Class="HMTDPTeamLibraryProject.AddNewArticlePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      xmlns:viewModels="clr-namespace:HMTDPTeamLibraryProject.ViewModels"
      d:DesignHeight="500" d:DesignWidth="800"
	Title="AddNewArticlePage">
    <Page.DataContext>
        <viewModels:ArticleStoreViewModel/>
    </Page.DataContext>

    <Grid >
        <Grid.Background>
            <LinearGradientBrush Opacity="0.1">
                <GradientStop Color="HotPink"  Offset="0.5"/>
                <GradientStop Color="RosyBrown"  Offset="0.6"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <StackPanel 
            Grid.Row="1" 
            Grid.Column="1" 
            Grid.RowSpan="3" 
            Height="500">
            <StackPanel 
                DataContext="{Binding NewArticle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="20*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock 
                        Grid.Row="0"
                        Grid.Column="0" 
                        HorizontalAlignment="Right" 
                        FontSize="13">Author:</TextBlock>
                    <TextBox 
                        Grid.Row="0" 
                        Grid.Column="1"  
                        Text="{Binding Author}" 
                        Margin="0,0,0,5" 
                        Grid.ColumnSpan="3" />
                    <TextBlock 
                        Grid.Row="0" 
                        Grid.Column="4" 
                        HorizontalAlignment="Right" 
                        FontSize="13">Title</TextBlock>
                    <TextBox 
                        Grid.Row="0" 
                        Grid.Column="5" 
                        Text="{Binding Title}" 
                        Margin="0,0,0,5" 
                        Grid.ColumnSpan="3"/>
                    <TextBlock 
                        Grid.Row="1" 
                        Grid.Column="0" 
                        HorizontalAlignment="Right" 
                        FontSize="13" 
                        Margin="0,0,4,0">Year</TextBlock>
                    <TextBox 
                        Name="yearbox" 
                        Grid.Row="1" 
                        Grid.Column="1" 
                        Text="{Binding Year}" 
                        Margin="0,0,22,5"/>
                    <TextBlock 
                        Grid.Row="1" 
                        Grid.Column="1" 
                        HorizontalAlignment="Right" 
                        FontSize="13" 
                        RenderTransformOrigin="1.208,0.472" 
                        Grid.ColumnSpan="2" 
                        Margin="0,0,74,0">Month</TextBlock>
                    <TextBox 
                        Name="monthbox" 
                        Grid.Row="1" 
                        Grid.Column="2" 
                        Text="{Binding Month}" 
                        Margin="26,0,10,5"/>
                    <TextBlock 
                        Grid.Row="1" 
                        Grid.Column="3" 
                        HorizontalAlignment="Right" 
                        FontSize="13" 
                        Margin="0,0,72,0">Day</TextBlock>
                    <TextBox 
                        Name="daybox" 
                        Grid.Row="1" 
                        Grid.Column="3" 
                        Text="{Binding Day}" 
                        Margin="28,0,0,5"/>
                    <TextBlock 
                        Grid.Row="1" 
                        Grid.Column="4" 
                        HorizontalAlignment="Right" 
                        FontSize="13">Category</TextBlock>
                    <TextBox 
                        Grid.Row="1" 
                        Grid.Column="5" 
                        Text="{Binding Category}" 
                        Margin="0,0,0,5" 
                        Grid.ColumnSpan="3"/>
                    <TextBlock 
                        Grid.Row="2" 
                        Grid.Column="4" 
                        HorizontalAlignment="Right" 
                        FontSize="13">Description</TextBlock>
                    <TextBox 
                        Grid.Row="2" 
                        Grid.Column="5" 
                        Text="{Binding Description}" 
                        Margin="0,0,0,5" 
                        Grid.ColumnSpan="3"/>
                    <TextBlock 
                        Grid.Row="2" 
                        Grid.Column="0" 
                        HorizontalAlignment="Right" 
                        FontSize="13">Contents</TextBlock>

                    <TextBox Grid.Row="3" Text="{Binding Contents}" Margin="0,0,0,5"
                        SpellCheck.IsEnabled="True" 
                        AcceptsReturn="True" 
                        AutoWordSelection="True" 
                        BorderBrush="Black" 
                        BorderThickness="2" 
                        Canvas.Left="12" 
                        Canvas.Top="12" 
                        Foreground="Black"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto" 
                        Height="270" 
                        Grid.ColumnSpan="8">
                        <TextBox.Background>
                            <LinearGradientBrush Opacity="0.07">
                                <GradientStop Color="DarkSlateGray"  Offset="3"/>
                                <GradientStop Color="Aquamarine" Offset="3"/>
                            </LinearGradientBrush>
                        </TextBox.Background>
                    </TextBox>
                </Grid>
            </StackPanel>
            
            <!--buttons-->
            
            <Button Command="{Binding AddNew}" FontSize="15" Click="OnAddClick">Add
                <Button.Background>
                    <LinearGradientBrush Opacity="0.8">
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            
            <Button FontSize="15" Click="OnArticlesClick" Content="Go to All Articles">
                <Button.Background>
                    <LinearGradientBrush Opacity="0.8">
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Page>
