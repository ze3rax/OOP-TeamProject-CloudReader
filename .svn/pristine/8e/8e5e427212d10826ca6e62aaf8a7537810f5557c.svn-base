<Window x:Class="HMTDPTeamLibraryProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WinForms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        Title="Cloud Reader" Height="540" Width="800"
        WindowStartupLocation="CenterScreen"
        TextOptions.TextFormattingMode="Display" Icon="Images\HMTDPTeamLibraryProj.ico" 
        ResizeMode="CanMinimize">
    <DockPanel>
        <Frame x:Name="mainFrame">
            <Frame.Template>
                <ControlTemplate TargetType="Frame">
                    <DockPanel >
                        <DockPanel.Background>
                            <LinearGradientBrush Opacity="0.4">
                                <GradientStop Color="Gray"  Offset="0.5"/>
                                <GradientStop Color="DarkKhaki"  />
                            </LinearGradientBrush>
                        </DockPanel.Background>
                        <Grid
                            Margin="7"
                            DockPanel.Dock="Top" 
                            Width="764"
                            >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Button 
                                Command="{x:Static NavigationCommands.BrowseBack}"
                                ToolTip="Home"
                                HorizontalAlignment="Left"
                                Margin="41,-4,0,-7"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;"
                                Grid.ColumnSpan="3"
                                Grid.Column="0"
                                >
                                <Button.Background>

                                    <ImageBrush ImageSource="pack://application:,,,/Images/Return.png"
                                                />
                                </Button.Background>
                            </Button>

                            <Button 
                                Command ="{x:Static NavigationCommands.BrowseForward}" 
                                ToolTip="Home"
                                HorizontalAlignment="Left"
                                Margin="41,-4,0,-7"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;"
                                Grid.ColumnSpan="3"
                                Grid.Column="1"
                                >
                                <Button.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/Forward.png"/>
                                </Button.Background>
                            </Button>

                            <!--<Button 
                                Grid.Column="1" 
                                ToolTip="Forward"
                                Style="{StaticResource RigthArrow2}" 
                                Command="{x:Static NavigationCommands.BrowseForward}" 
                                IsEnabled="{TemplateBinding CanGoForward}" 
                                Grid.ColumnSpan="2" Margin="10,8,48,-8"
                                >
                                <Button.RenderTransform>
                                    <ScaleTransform ScaleX="0.7" ScaleY="0.7"></ScaleTransform>
                                </Button.RenderTransform>
                            </Button>-->

                            <Button 
                                
                                Click="OnHomeButtonClick"
                                ToolTip="Home"
                                HorizontalAlignment="Left"
                                Margin="41,-4,0,-7"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;"
                                Grid.ColumnSpan="3"
                                Grid.Column="4"
                                >
                                <Button.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/Home.png"/>
                                </Button.Background>
                            </Button>

                            <Button 
                                Click="OpenAllArticlesClick"
                                ToolTip="All Articles"
                                HorizontalAlignment="Left"
                                Margin="41,-4,0,-7"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;"
                                Grid.ColumnSpan="3"
                                Grid.Column="5"
                                >
                                <Button.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/Articles.png"/>
                                </Button.Background>
                            </Button>

                            <Button 
                                
                                Click="OpenNewArticleClick"
                                ToolTip="Add New Article"
                                HorizontalAlignment="Left"
                                Margin="41,-4,0,-7"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;"
                                Grid.ColumnSpan="3"
                                Grid.Column="6"
                                >
                                <Button.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/NewArticle.png"/>
                                </Button.Background>
                            </Button>

                            <Button
                               Click="ProjectInfoClick"
                                ToolTip="Project Info"
                                HorizontalAlignment="Left"
                                Margin="43,-4,0,-3"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="7"
                                >
                                <Button.Background>
                                    <ImageBrush ImageSource="pack://application:,,,/Images/Info.png"/>
                                </Button.Background>
                            </Button>

                            <TextBox 
                                Name="textGlobalSearch"
                                GotFocus="TextBoxGotFocus"
                                ToolTipService.ToolTip="Search in the application database"
                                Height="24" 
                                Margin="44,7,1,0" 
                                VerticalAlignment="Top" 
                                Width="245" 
                                Background="LightGray"
                                RenderTransformOrigin="2.311,0.552" 
                                Grid.ColumnSpan="5" 
                                Grid.Column="8"/>
                            <!--<WindowsFormsHost>
                                <WinForms:DataGridView x:Name="Search">
                                </WinForms:DataGridView>
                            </WindowsFormsHost>-->
                        </Grid>

                        <Border 
                                BorderBrush="DarkGray"
                                BorderThickness="0"
                                Background="Transparent"
                                >
                            <ContentPresenter />
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Frame.Template>
        </Frame>


    </DockPanel>
</Window>
