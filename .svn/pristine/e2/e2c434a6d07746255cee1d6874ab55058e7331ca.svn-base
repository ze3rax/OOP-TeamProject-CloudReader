<Page x:Class="HMTDPTeamLibraryProject.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
       d:DesignHeight="500" d:DesignWidth="800"
	Title="StartPage">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush Opacity="0.22">
                <GradientStop Color="GreenYellow"  Offset="0.5"/>
                <GradientStop Color="LightGreen"  Offset="0.6"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBox Grid.Row="1" Margin="120,0,120,0"
                    Name="titleArticle"
                    SpellCheck.IsEnabled="True" 
                    AcceptsReturn="True" 
                    AutoWordSelection="True" 
                    BorderBrush="Transparent"
                    Foreground="SteelBlue"
                    IsReadOnly="True"
                    FontSize="25"
                    FontStyle="Normal"
                    FontWeight="ExtraBold"
                    HorizontalContentAlignment="Center"
                    VerticalAlignment="Center"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Text="Read Your Favorite Articles">
            <TextBox.Background>
                <LinearGradientBrush Opacity="0.11">
                    <GradientStop Color="DarkSlateGray"  Offset="3"/>
                    <GradientStop Color="Aquamarine" Offset="3"/>
                </LinearGradientBrush>
            </TextBox.Background>
        </TextBox>


        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" 
                    Grid.Column="1" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Name="MainButtonOne" 
                    Click="OpenAllArticlesClick" 
                    Height="120" Width="260"  
                    ToolTipService.ToolTip="Open main articles list"  
                    Margin="5,5,5,5">
                <Button.Background>
                    <LinearGradientBrush Opacity="0.3">
                        <GradientStop Color="GreenYellow"  Offset="5"/>
                        <GradientStop Color="BlueViolet"  Offset="2"/>
                        <GradientStop Color="GreenYellow"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Image Source="../Images/AllArticlesPic.png" 
                       Stretch="Fill" 
                       MaxHeight="100" 
                       MaxWidth="160"/>
            </Button>

            <Button Grid.Row="1" 
                    Grid.Column="3" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"  
                    Name="MainButtonTwo" 
                    Click="OpenNewArticleClick" 
                    Height="120" 
                    Width="260" 
                    FontSize="30" 
                    ToolTipService.ToolTip="Write a new article" 
                    BorderBrush="DarkGreen"  
                    BorderThickness="7" 
                    Margin="5,5,5,5">
                <Button.Background>
                    <LinearGradientBrush Opacity="0.2">
                        <GradientStop Color="GreenYellow"  Offset="5"/>
                        <GradientStop Color="BlueViolet"  Offset="2"/>
                        <GradientStop Color="Aqua"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Image Source="../Images/NewArticlePic.png" 
                       Stretch="Fill" 
                       MaxHeight="100" 
                       MaxWidth="160"/>
            </Button>

            <Button Grid.Row="1" 
                    Grid.Column="5" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"  
                    Name="MainButtonThree" 
                    Click="OnSearchClick" 
                    Height="130" 
                    Width="260" 
                    FontSize="30"  
                    BorderBrush="BlanchedAlmond"  
                    BorderThickness="7" 
                    Margin="5,5,5,5">
                <Button.Background>
                    <LinearGradientBrush Opacity="0.1">
                        <GradientStop Color="GreenYellow"  Offset="5"/>
                        <GradientStop Color="BlueViolet"  Offset="2"/>
                        <GradientStop Color="#FFFF0000"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Image Source="../Images/SearchArticlePic.png" 
                       Stretch="Fill"/>
            </Button>

            <Button Grid.Row="3" 
                    Grid.Column="2" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"  
                    Name="MainButtonFour"  
                    Click="OpenBooksCatalogue" 
                    Height="130" 
                    Width="270" 
                    FontSize="30"  
                    BorderBrush="BlanchedAlmond"  
                    BorderThickness="7" 
                    Margin="5,5,5,5">
                <Button.Background>
                    <LinearGradientBrush Opacity="0.8">
                        <GradientStop Color="GreenYellow"  Offset="5"/>
                        <GradientStop Color="BlueViolet"  Offset="2"/>
                        <GradientStop Color="Azure"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Image Source="../Images/Info.png" 
                       Stretch="Fill" Width="105" Height="94"/>
            </Button>

            <Button Grid.Row="3" 
                    Grid.Column="4" 
                    Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Name="MainButtonFive"  
                    Height="130" 
                    Width="270" 
                    FontSize="30"  
                    BorderBrush="BlanchedAlmond"  
                    BorderThickness="7" 
                    Margin="5,5,5,5">
                <Button.Background>
                    <LinearGradientBrush Opacity="0.8">
                        <GradientStop Color="GreenYellow"  Offset="5"/>
                        <GradientStop Color="BlueViolet"  Offset="2"/>
                        <GradientStop Color="Bisque"/>
                    </LinearGradientBrush>
                </Button.Background>
                <Image  Stretch="Fill"/>
            </Button>

            <Button 
                                Grid.ColumnSpan="3"
                                Grid.Column="11"
                               
                                ToolTip="Articles"
                                HorizontalAlignment="Left"
                                Margin="41,-4,0,-7"
                                VerticalAlignment="Top"
                                Width="48" Height="48"
                                BorderBrush="{x:Null}"
                                Visibility="Visible"
                                FontFamily="Segoe UI Symbol" 
                                Content="&#xE1B5;"
                                >
                <Button.Background>
                    <ImageBrush ImageSource="pack://application:,,,/Images/Info.png"/>
                </Button.Background>
            </Button>

        </Grid>
    </Grid>
</Page>
