<Page x:Class="HMTDPTeamLibraryProject.Books"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      xmlns:viewModels="clr-namespace:HMTDPTeamLibraryProject.ViewModels"
      d:DesignHeight="500" d:DesignWidth="800"
	Title="Books">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush Opacity="0.1">
                <GradientStop Color="HotPink"  Offset="0.5"/>
                <GradientStop Color="RosyBrown"  Offset="0.6"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" DataContext="{Binding NewArticle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    HorizontalAlignment="Right" 
                    FontSize="13" 
                    Width="42">Title:</TextBlock>
                <TextBox 
                    Grid.Row="0" 
                    Grid.Column="1"  
                    Text="{Binding Title}" 
                    Margin="0,0,0,5" 
                    Grid.ColumnSpan="3" />
 
                <TextBlock 
                    Grid.Row="0" 
                    Grid.Column="4" 
                    HorizontalAlignment="Right" 
                    FontSize="13" 
                    Width="40">Pages</TextBlock>
                <TextBox 
                    Grid.Row="0" 
                    Grid.Column="5" 
                    Text="{Binding Pages}" 
                    Margin="0,0,0,5" />
 
                <TextBlock 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    HorizontalAlignment="Right" 
                    FontSize="13" 
                    Margin="0,0,4,0" 
                    Width="57">Start day</TextBlock>
                
                <DatePicker 
                    SelectedDateFormat="Long" 
                    SelectedDate="2013-11-23"
                    DisplayDateStart="2013-11-01" 
                    DisplayDateEnd="2013-11-30" 
                    FirstDayOfWeek="Monday"/>
               

                <TextBlock 
                    Grid.Row="1" 
                    Grid.Column="4" 
                    HorizontalAlignment="Right" 
                    FontSize="13" 
                    Margin="0,0,4,0" 
                    Width="57">End day</TextBlock>
                <TextBox  
                    Grid.Row="1" 
                    Grid.Column="5" 
                    Text="{Binding EndDay}" 
                    Margin="0,0,0,5"/>

            </Grid>
        </StackPanel>

        <ListView 
            Name="booksList" 
            Grid.Row="1" 
            Background="Transparent" 
            ItemsSource="{Binding Books}" 
            FontSize="13">
            
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn 
                            Width="360" 
                            Header="Title" 
                            DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn 
                            Width="100" 
                            Header="Pages" 
                            DisplayMemberBinding="{Binding Pages}"/>
                        <GridViewColumn 
                            Width="100" 
                            Header="Start day" 
                            DisplayMemberBinding="{Binding StartDay}"/>
                        <GridViewColumn 
                            Width="100" 
                            Header="End day" 
                            DisplayMemberBinding="{Binding EndDay}"/>
                        <GridViewColumn 
                            Width="100" 
                            Header="pages/day" 
                            DisplayMemberBinding="{Binding PagesPerDay}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Page>
